{
    "name": "Thodle",
    "private": true,
    "scripts": {
        "build": "bun --bun turbo build --env-mode=loose",
        "dev": "bun --bun turbo dev --env-mode=loose",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "prettier": "^3.2.5",
        "turbo": "^2.1.3",
        "typescript": "^5.4.5"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "bun@1.1.30",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "dependencies": {
        "hono": "^4.6.3",
        "nodemon": "^3.1.7"
    }
}

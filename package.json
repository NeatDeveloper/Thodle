{
    "name": "@neatteam/thodle",
    "private": true,
    "scripts": {
        "build": "MODE=prod bun --bun turbo build --env-mode=loose",
        "dev": "MODE=dev bun --bun turbo dev --env-mode=loose",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,js}\"",
        "format-check": "prettier --check \"**/*.{ts,js}\"",
        "db:migrate": "bunx prisma migrate dev",
        "db:deploy": "bunx prisma migrate deploy",
        "db:create-doc": "bunx prisma generate",
        "db:update": "bun db:migrate && bun db:create-doc"
    },
    "devDependencies": {
        "@mermaid-js/mermaid-cli": "^11.2.1",
        "@types/bun": "^1.1.11",
        "@vitest/ui": "^2.1.3",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "prettier": "^3.3.3",
        "prisma": "5.21.1",
        "prisma-markdown": "^1.0.9",
        "turbo": "^2.2.1",
        "typescript": "^5.6.3"
    },
    "engines": {
        "node": ">=20"
    },
    "prisma": {
        "schema": "./prisma/schema"
    },
    "packageManager": "bun@1.1.30",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "dependencies": {
        "@hono/swagger-ui": "^0.4.1",
        "@hono/zod-openapi": "^0.16.4",
        "@prisma/client": "5.21.1",
        "@scalar/hono-api-reference": "^0.5.156",
        "@telegram-apps/sdk": "^2.5.1",
        "@typescript-eslint/eslint-plugin": "^8.10.0",
        "@typescript-eslint/parser": "^8.10.0",
        "eslint-plugin-const-case": "^1.2.2",
        "grammy": "^1.30.0",
        "hono": "^4.6.5",
        "http-status-codes": "^2.3.0",
        "nodemon": "^3.1.7",
        "svelte": "^5.0.2"
    }
}

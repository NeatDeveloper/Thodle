{
    "name": "Thodle",
    "private": true,
    "scripts": {
        "build": "bun --bun turbo build --env-mode=loose",
        "dev": "bun --bun turbo dev --env-mode=loose",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "start-bot": "bun --bun turbo dev --env-mode=loose --filter=@app/bot"
    },
    "devDependencies": {
        "prettier": "^3.3.3",
        "prisma": "5.21.1",
        "turbo": "^2.1.3",
        "typescript": "^5.6.3"
    },
    "engines": {
        "node": ">=20"
    },
    "prisma": {
        "schema": "./database/schema"
    },
    "packageManager": "bun@1.1.30",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "dependencies": {
        "@prisma/client": "5.21.1",
        "@telegram-apps/sdk": "^2.4.0",
        "grammy": "^1.30.0",
        "hono": "^4.6.3",
        "nodemon": "^3.1.7",
        "svelte": "^5.0.0-next.264"
    }
}

{
    "name": "Thodle",
    "private": true,
    "scripts": {
        "build": "bun --bun turbo build --env-mode=loose",
        "dev": "bun --bun turbo dev --env-mode=loose",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",


        "db:migrate": "bunx prisma migrate dev",
        "db:deploy": "bunx prisma migrate deploy",
        "db:create-doc": "bunx prisma generate",
        "db:update": "bun db:migrate && bun db:create-doc"
    },
    "devDependencies": {
        "@mermaid-js/mermaid-cli": "^11.2.1",
        "prettier": "^3.3.3",
        "prisma": "5.21.1",
        "prisma-markdown": "^1.0.9",
        "turbo": "^2.1.3",
        "typescript": "^5.6.3"
    },
    "engines": {
        "node": ">=20"
    },
    "prisma": {
        "schema": "./database/schema"
    },
    "packageManager": "bun@1.1.30",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "dependencies": {
        "@prisma/client": "5.21.1",
        "@telegram-apps/sdk": "^2.5.1",
        "grammy": "^1.30.0",
        "hono": "^4.6.5",
        "nodemon": "^3.1.7",
        "svelte": "^5.0.0-next.269"
    }
}

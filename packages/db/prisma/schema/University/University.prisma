/// -------------------------------------------------------
/// Схема "Университет"
/// -------------------------------------------------------
///
/// Модель **Университет**
///
/// Модель университета является основной моделью ВУЗов в нашей системе.
/// От неё исходят все остальные модели, создавая древообразную структуру.
///
/// @namespace University
/// @erd University
model University {
    /// Уникальный идентификатор университета в системе
    id Int @id @default(autoincrement())

    /// Название университета
    name String @unique

    /// Название университета в сокращенном варианте
    shartName String @unique @map("short_name")

    /// Город, где университет находится
    city String

    /// Массив, где хранятся время когда проходят учебные процессы
    /// @minItems 5
    studyTime Json @map("study_time")

    /// Связь с моделью Week для определения названий недель в конкретном университете
    /// @minItems 2
    /// @maxItems 2
    weeks Week[]

    /// Факультеты, которые относятся к данному университету
    faculties Faculity[]

    /// Корпуса, которые относятся к данному университету
    buildings Building[]

    /// Дата обновления университета в нашей системе
    updatedAt DateTime @updatedAt @map("updated_at")

    /// Дата создания университета в нашей системе
    createdAt DateTime @default(now()) @map("created_at")

    @@map("Universities")
    @@schema("university")
}

model Settings {
    id String @id

    User User @relation(fields: [id], references: [id], onDelete: Cascade)

    mailing  MailingSettings?
    schedule ScheduleSettings?
    miniapp  MiniappSettings?

    updatedAt DateTime @updatedAt @map("updated_at")
    createdAt DateTime @default(now()) @map("created_at")

    @@map("Settings")
    @@schema("user")
}

model MiniappSettings {
    id String @id

    fullscreen      Boolean        @default(false)
    toastPosition   ToastPositions @default(T) @map("toast_position")
    roundedSettings Boolean        @default(false) @map("rounded_settings")
    rounded         Boolean        @default(true)
    theme           String         @default("Default")
    schema          String         @default("dark")

    settings Settings @relation(fields: [id], references: [id], onDelete: Cascade)

    @@map("MiniappSettings")
    @@schema("user")
}

enum ToastPositions {
    T  @map("toast_position_t")
    B  @map("toast_position_b")
    TL @map("toast_position_tl")
    TR @map("toast_position_tr")
    BR @map("toast_position_br")
    BL @map("toast_position_bl")

    @@map("ToastsPosition")
    @@schema("user")
}

model MailingSettings {
    id String @id

    isPossible Boolean @default(true) @map("isPossible")

    settings Settings @relation(fields: [id], references: [id], onDelete: Cascade)

    @@map("MailingSettings")
    @@schema("user")
}

model ScheduleSettings {
    id String @id

    shortLessonName Boolean @default(false) @map("short_lesson_name")

    settings Settings @relation(fields: [id], references: [id], onDelete: Cascade)

    @@map("ScheduleSettings")
    @@schema("user")
}

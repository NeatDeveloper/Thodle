model Settings {
    id   String @id

    user User @relation(fields: [id], references: [id], onDelete: Cascade)

    mailing MailingSettings?

    @@map("Settings")
    @@schema("user")
}

model MailingSettings {
    id   String @id

    canISend Boolean @default(true) @map("can_i_send")

    settings Settings @relation(fields: [id], references: [id])

    @@map("MailingSettings")
    @@schema("user")
}

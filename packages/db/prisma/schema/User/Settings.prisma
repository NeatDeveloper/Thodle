model Settings {
    id String @id

    User User @relation(fields: [id], references: [id], onDelete: Cascade)

    fullscreen Boolean @default(true)

    mailing  MailingSettings?
    schedule ScheduleSettings?
    theme    ThemeSettings?

    updatedAt DateTime @updatedAt @map("updated_at")
    createdAt DateTime @default(now()) @map("created_at")

    @@map("Settings")
    @@schema("user")
}

model MailingSettings {
    id String @id

    isPossible Boolean @default(true) @map("isPossible")

    settings Settings @relation(fields: [id], references: [id], onDelete: Cascade)

    @@map("MailingSettings")
    @@schema("user")
}

model ScheduleSettings {
    id String @id

    shortLessonName Boolean @default(false) @map("short_lesson_name")

    settings Settings @relation(fields: [id], references: [id], onDelete: Cascade)

    @@map("ScheduleSettings")
    @@schema("user")
}

model ThemeSettings {
    id String @id

    theme String @default("Default")
    schema String @default("dark")

    settings Settings @relation(fields: [id], references: [id], onDelete: Cascade)

    @@map("ThemeSettings")
    @@schema("user")
}

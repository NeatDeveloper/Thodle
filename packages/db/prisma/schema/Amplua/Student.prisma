model Student {
    id   String @id
    tgID BigInt @unique

    user Amplua @relation(fields: [id, tgID], references: [id, tgID])

    Group Group? @relation(fields: [group], references: [id])
    group Int?

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@unique([id, tgID])
    @@index([group])
    @@schema("amplua")
}
